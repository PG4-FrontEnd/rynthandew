{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}